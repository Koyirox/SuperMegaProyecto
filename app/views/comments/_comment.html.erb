<% @comments.each do |comment| %>

<p><b> <%= comment.user.email%> </b></p>

<%= comment.content %>

    <% if can?(:destroy, comment)%>                                                                                                                                            
    <%= link_to "Delete comment",  [comment.podcast, comment], method: :delete %>
    <% end %>
<% end %>

<%= render 'comments/form'%>


